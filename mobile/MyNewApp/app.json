{
  "expo": {
    "name": "Farm App",
    "slug": "farm-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "farmapp",
    "userInterfaceStyle": "automatic",
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.yourcompany.farmapp"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#4CAF50"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.yourcompany.farmapp"
    },
    "web": {
      "bundler": "metro",
      "favicon": "./assets/images/favicon.png",
      "name": "Farm App",
      "shortName": "Farm App",
      "description": "Farm management application",
      "lang": "en",
      "scope": "/",
      "startUrl": "/",
      "display": "standalone",
      "orientation": "portrait",
      "themeColor": "#4CAF50",
      "backgroundColor": "#ffffff"
    },
    "plugins": [
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#4CAF50"
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "0497cfc0-fb74-448e-9a3d-8f780218a235"
      }
    }
  }
}
